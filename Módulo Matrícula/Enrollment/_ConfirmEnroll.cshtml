@model ContosoUniversity.Models.Course


<div class="modal-header">
    <h4 class="modal-title" id="H1">Are you sure you want to enroll this course?</h4>
</div>
<div class="modal-body">
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CourseID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CourseID)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Credits)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Credits)
        </dd>
    </dl>
</div>
<div class="modal-footer">
    <div class="row">
        @using (Html.BeginForm("EnrollCourseConfirmed", "Enrollment", new { id = Model.CourseID }, FormMethod.Post)) {
            @Html.AntiForgeryToken()
            <div class="col-md-4 col-md-offset-4">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="submit" id="approve-btn" class="btn btn-success">Confirm</button>
            </div>
        }
    </div>
</div>


<script type="text/javascript">
    $(function () {
        $('#approve-btn').click(function () {
            $('#modal-container').modal('hide');
        });
    });
</script>
