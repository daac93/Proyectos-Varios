@model ContosoUniversity.Models.Course

@{
    Layout = null;
    ViewBag.Title = "Enroll Class";
}

@using (Html.BeginForm("ConfirmEnroll", "Enrollment", FormMethod.Post, new { enctype = "multipart/form-data" })) {
    <div class="modal fade" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="H1">Ae you sure you want to enroll this course?</h4>
                </div>
                <div class="modal-body">
                    
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-danger" name="btn" value="Aceptar">Eliminar</button>
                    <button type="submit" class="btn btn-primary" name="btn" value="Cancelar">Cancelar</button>
                </div>
            </div>
        </div>
    </div>
}

<script>
    $('#myModal').modal('show');
</script>
